{
    "name": "Translatorium - modern language translation",
    "description": "Ultimate Edition - Select text to translate, dictionary lookup, favorite translations, text to speech, safety.",
    "version": "5.2",
    "manifest_version": 3,
    "permissions": [
        "storage",
        "contextMenus",
        "tabs"
    ],
    "content_scripts": [
        {
            "matches": [
                "<all_urls>"
            ],
            "js": [
                "languages.js",
                "content_script/content.js",
                "content_script/mouse.js"
            ],
            "css": [
                "fonts/ubuntu.css"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    },
    "commands": {
        "_execute_action": {
            "suggested_key": {
                "default": "Alt+U"
            },
            "description": "Open translator menu"
        }
    },
    "web_accessible_resources": [
        {
            "resources": [
                "icons/icon"
            ],
            "matches": [
                "<all_urls>"
            ]
        },
        {
            "resources": [
                "tooltip_styles/tooltipWindow.html",
                "tooltip_styles/tooltipOriginal.html",
                "tooltip_styles/tooltipWindow.css",
                "tooltip_styles/tooltipOriginal.css",
                "fonts/ubuntu.css"
            ],
            "matches": [
                "<all_urls>"
            ]
        }
    ],
    "action": {
        "default_icon": "icons/T-1.png",
        "default_title": "Translator, Alt+U",
        "default_popup": "popup/popup.html"
    },
    "icons": {
        "16": "icons/T-1.png",
        "48": "icons/T-1.png",
        "128": "icons/T-1.png"
    }
}